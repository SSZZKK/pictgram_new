<div class="topic-index-wrapper">
  <div class="container">
    <% @topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%= topic.user.name %>
            </h2>
            
             
             <% if %r[\.png|\.jpg|\.jpeg] =~ topic.image.filename %>
             <%= image_tag topic.image.url %>
             
             <% elsif %r[\.mp4|\.wmv|\.MOV] =~ topic.image.filename %>
             <%= video_tag topic.image.url, autoplay: false, muted: false, controls: true , :size => "427x240" %>
             
             <% end %>
            
            
            <% if topic.favorite_users.include?(current_user) %>
              <%= link_to favorites_path(topic_id: topic.id), method: :delete do %>
                <%= image_tag 'icons/heart.png', class: 'topic-index-icon-red' %>
              <% end %>
            <% else %>
              <%= link_to favorites_path(topic_id: topic.id), method: :post do %>
                <%= image_tag 'icons/heart-black.png', class: 'topic-index-icon' %>
              <% end %>
            <% end %>

           <%= topic.favorite_users.count %>

            <%= link_to new_comment_path(topic_id: topic.id) do %>
              <%= image_tag 'icons/comment.png', class: 'topic-index-icon' %>
            <% end %>
            
            

            <p class="topic-text">
              <%= topic.description %>
            </p>
              <h5>&nbsp;comments</h5>
            <div id=<%= "comment_new#{topic.id}" %>></div>
              <p class="topic-text">
                <% topic.comments.each do |comment| %>
                  <p class="topic-text">
                  <%= comment.body %>
                  </p>
                <% end %>
              </p>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>